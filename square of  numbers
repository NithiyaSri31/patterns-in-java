public class Main {
    public static void main(String[] args) {
        int num=2;
        int n = 6;

        for (int i = 1; i <= n; i++) {
            for (int j = 1; j <= i; j++) {
                System.out.print(num + " ");
                num=num*2;
            }
            System.out.println();
        }
    }
}


