public class Pattern {
    public static void main(String[] args) {
        int n= 4;

        for (int i = 1; i <= n; i++) {
            for (int j = 0; j < i; j++) {
               
                int val = ((i + j) % 2 == 1) ? 1 : 0;
                System.out.print(val + " ");
            }
            System.out.println();
        }
    }
}
